@using Microsoft.AspNetCore.Http
@model GreenBD_Dairy.Models.ProductReadyToDeliver

@{
    ViewData["Title"] = "Details";
}


<html>
<head>
    <link href="~/css/Create-Edit-Delete-StyleSheet.css" rel="stylesheet" />
</head>
<body>
<div class="page-heding">
    <marquee><p>Thanks<span style="color: #ffcc00">! </span> <span style="color: #FFCC00">@@</span><span style="color: #FFCC00"> @Context.Session.GetString("username")</span> for Reading Deliver Product Information</p></marquee>
</div>
<div class="container">
    <section>
        <div class="create-form">
            <div class="row" id="create-form-id">
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductType)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductType.ProductTypeName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductQuality)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductQuality.ProductQualityName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.NumberOfProduct)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NumberOfProduct)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.NumberSign)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NumberSign.NumberSignName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.WorkerSignature)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.WorkerSignature)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.EntryDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EntryDate)
                    </dd>
                </dl>
                <hr />
                <div>
                    <a asp-action="Index" class="btn btn-info">Back to List</a>
                    <a asp-action="Edit" class="btn btn-danger" asp-route-id="@Model.Id">Edit</a>
                </div>
                <br />
            </div>
        </div>
    </section>
</div>
</body>
</html>
