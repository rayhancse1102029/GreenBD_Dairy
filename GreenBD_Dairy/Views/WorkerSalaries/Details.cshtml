@using Microsoft.AspNetCore.Http
@model GreenBD_Dairy.Models.WorkerSalary

@{
    ViewData["Title"] = "Details";
}


<html>
<head>
    <link href="~/css/Create-Edit-Delete-StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="page-heding">
        <marquee><p>Welcome<span style="color: #ffcc00">! </span> <span style="color: #FFCC00">@@</span><span style="color: #FFCC00"> @Context.Session.GetString("username")</span> for Viewing Worker Salary Information </p></marquee>
    </div>
    <div class="container">
        <section>
            <div class="create-form">
                <div class="row" id="create-form-id">
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.IdCardNumber)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.IdCardNumber)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Salary)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Salary)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Month)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Month.MonthName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PaymentMethod)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PaymentMethod.PaymentMethodName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Rank)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Rank.RankName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ManagerSignature)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ManagerSignature)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.EntryDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.EntryDate)
                        </dd>
                    </dl>
                    <hr />
                    <div>
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                        <a asp-action="Edit" class="btn btn-danger" asp-route-id="@Model.Id">Edit</a>
                    </div>
                    <br />
                </div>
            </div>
        </section>
    </div>
</body>
</html>

