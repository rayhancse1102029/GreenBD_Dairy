<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GreenBD</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <link href="~/css/Layout-StyleSheet.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a asp-area="" asp-controller="OthersLogic" asp-action="AdminIndex" class="navbar-brand">GreenBD</a>*@
                <img id="top-logo" src="~/Images/Logo.png" class="img-responsive img-circle" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="OthersLogic" asp-action="AdminIndex">Home</a></li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Accounts
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="ProductSells" asp-action="Index">Product Sell</a></li>
                            <li><a asp-controller="ProductBuys" asp-action="Index">Product Buy</a></li>
                            <li><a asp-controller="WorkerSalaries" asp-action="Index">Worker Salary</a></li>
                            <li><a asp-controller="OthersPayments" asp-action="Index">Others Payment</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Management
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="CowManagements" asp-action="Index">Cows</a></li>
                            <li><a asp-controller="Doctors" asp-action="Index">Doctors</a></li>
                            <li><a asp-controller="FoodManagements" asp-action="Index">Foods</a></li>
                            <li><a asp-controller="LandManagements" asp-action="Index">Lands</a></li>
                            <li><a asp-controller="Transports" asp-action="Index">Transports</a></li>
                            <li><a asp-controller="WorkerManagements" asp-action="Index">Workers</a></li>
                        </ul>
                    </li>
                    <li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Product Info
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="AmountSigns" asp-action="Index">Amount Sign</a></li>
                            <li><a asp-controller="FoodTypes" asp-action="Index">Food Type</a></li>
                            <li><a asp-controller="NumberSigns" asp-action="Index">Number Sign</a></li>
                            <li><a asp-controller="ProductTypes" asp-action="Index">Product Type</a></li>
                            <li><a asp-controller="ProductQualities" asp-action="Index">Product Quality</a></li>
                            <li><a asp-controller="TransportTypes" asp-action="Index">Transport Type</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Cow Info
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="CowCollections" asp-action="Index">Cow Collection</a></li>
                            <li><a asp-controller="CowPurposes" asp-action="Index">Cow Purpose</a></li>
                            <li><a asp-controller="CowGroups" asp-action="Index">Cow Group</a></li>
                            <li><a asp-controller="NationOfCows" asp-action="Index">Nation of Cow</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Others Info
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Days" asp-action="Index">Days</a></li>
                            <li><a asp-controller="DoctorsSchedules" asp-action="Index">Doctors Schedule</a></li>
                            <li><a asp-controller="Genders" asp-action="Index">Gender</a></li>
                            <li><a asp-controller="Investments" asp-action="Index">Investments</a></li>
                            <li><a asp-controller="Months" asp-action="Index">Month</a></li>
                            <li><a asp-controller="PaymentMethods" asp-action="Index">Payment Method</a></li>
                            <li><a asp-controller="Ranks" asp-action="Index">Rank</a></li>
                            <li><a asp-controller="SpecialistTypes" asp-action="Index">Specialist Type</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Worker
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="ProductReadyToDelivers" asp-action="Index">Product Ready</a></li>
                        </ul>
                    </li>
                    <li>
                        @if (User.Identity.IsAuthenticated)  
                        {  
                            if (User.IsInRole("Owner"))  
                            {  
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Users
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Account" asp-action="CreateRole">Create Role</a></li>
                                    <li><a asp-controller="Account" asp-action="AssignRole">Assign Role</a></li>
                                    <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                                </ul> 
                            }  
                        } 
                    </li>
                    <li id="profile">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Profile Setting
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" id="profile-dropdown">
                            <li><a asp-controller="ProductReadyToDelivers" asp-action="Index">Notification</a></li>
                            <li><a asp-controller="ProductReadyToDelivers" asp-action="Index">My Profile</a></li>
                            <li><a asp-controller="ProductReadyToDelivers" asp-action="Index">Help</a></li>
                            <li><a asp-area="" asp-controller="OthersLogic" asp-action="Contact">Contact</a></li>
                            <li>@await Html.PartialAsync("_LoginPartial")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
        <footer>
            <div class="developer-info">
                <p> @DateTime.Now.Year - Designed & Developed by <a id="developer-link"> @@Rayhan and Azaim</a> </p>
            </div>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
<environment exclude="Development">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>


    <script src="~/Scroll btn/Scroll-bar.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
