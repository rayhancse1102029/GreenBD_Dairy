@using Microsoft.AspNetCore.Identity
@using GreenBD_Dairy.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<style>

    #sign-in-id{
        margin-right: 55px;
    }
    #sign-up-id, #sign-in-id,#sign-out-id {
        font-size: 17px;
        font-family: monospace;
        color: #FDC320;
    }
    #sign-up-id:hover, #sign-in-id:hover,#sign-out-id {
        font-size: 17px;
        font-family: monospace;
        color: black;
    }
    #sign-out-id {
        padding-right: 50px;
        color: #FDC320;
        text-decoration: none;
    }
    #sign-out-li-id {
        padding-top: 10px;
    }

</style>

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
            <li id="sign-out-li-id">
                <button type="submit" id="sign-out-id" class="btn btn-link navbar-btn navbar-link">Log Out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right li">
        <li ><a id="sign-up-id" asp-area="" asp-controller="Account" asp-action="Register">SignUp</a></li>
        <li><a id="sign-in-id" asp-area="" asp-controller="Account" asp-action="Login">SignIn</a></li>
    </ul>
}
